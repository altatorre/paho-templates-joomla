<?xml version="1.0" encoding="utf-8"?>
<!DOCTYPE install PUBLIC "-//Joomla! 2.5//DTD template 1.0//EN" "http://www.joomla.org/xml/dtd/2.5/template-install.dtd">
<extension version="3.0" type="template" client="site">
	<name>Responsive2017</name>
	<version>1.0</version>
	<creationDate>08/12/2015</creationDate>
	<author>Carousel 30, Paulo Leite</author>
	<authorEmail></authorEmail>
	<copyright>GNU/GPL</copyright>
	<license>GNU/GPL</license>
	<description>Accessible template for PAHO internal pages in Joomla 3.x</description>
	<files>
		<filename>component.php</filename>
		<filename>favicon.ico</filename>
		<filename>index.php</filename>
		<filename>error.php</filename>
		<filename>functions.php</filename>
		<filename>templateDetails.xml</filename>
		<filename>template_preview.png</filename>
		<filename>template_thumbnail.png</filename>
		<folder>css</folder>
		<folder>fonts</folder>
		<folder>html</folder>
		<folder>images</folder>
		<folder>js</folder>
		<folder>language</folder>
	</files>
	<positions>
		<position>sidebar_social</position>
		<position>language_switcher_mobile</position>
		<position>banners</position>
		<position>header</position>
		<position>brand</position>
		<position>breadcrumbs</position>
		<position>flag</position>
		<position>innerleft</position>
		<position>innercenter</position>
		<position>innerright</position>
		<position>left1</position>
		<position>left2</position>
		<position>left3</position>
		<position>left4</position>
		<position>left5</position>
		<position>postcols</position>
		<position>postmain</position>
		<position>premain</position>
		<position>right</position>
		<position>right1</position>
		<position>right2</position>
		<position>right3</position>
		<position>right4</position>
		<position>right5</position>
		<position>home_top</position>
		<position>home_more_news</position>
		<position>home_events</position>
		<position>home_bottom</position>
		<position>home_twitter_row</position>
		<position>footer_branding</position>
		<position>footer_menu</position>
		<position>inner_left</position>
		<position>inner_after_content</position>
		<position>inner_bottom_twocol</position>
		<position>footer</position>
		<position>debug</position>
	</positions>
	
	<languages folder="language">
		<language tag="en-GB">en-GB/en-GB.tpl_Responsive.ini</language>
		<language tag="en-US">en-US/en-US.tpl_Responsive.ini</language>
		<language tag="es-ES">es-ES/es-ES.tpl_Responsive.ini</language>
	</languages>
	
	<config>
		<fields name="params">
			<fieldset name="advanced">
				<field name="sitetitle"  type="text" default=""
					label="JGLOBAL_TITLE"
					description="JFIELD_ALT_PAGE_TITLE_LABEL"
					filter="string" />

				<field name="sitedescription"  type="text" default=""
					label="JGLOBAL_DESCRIPTION"
					description="JGLOBAL_SUBHEADING_DESC"
					filter="string" />
			</fieldset>
		</fields>
	</config>
</extension>
