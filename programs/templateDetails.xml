<?xml version="1.0" encoding="utf-8"?>
<!DOCTYPE install PUBLIC "-//Joomla! 2.5//DTD template 1.0//EN" "http://www.joomla.org/xml/dtd/2.5/template-install.dtd">
<extension version="3.0" type="template" client="site">
	<name>Programs</name>
	<version>1.0</version>
	<creationDate>08/12/2015</creationDate>
	<author></author>
	<authorEmail></authorEmail>
	<copyright>GNU/GPL</copyright>
	<license>GNU/GPL</license>
	<description>Accessible template for Joomla 3.x</description>
	<files>
		<filename>component.php</filename>
		<filename>favicon.ico</filename>
		<filename>index.php</filename>
		<filename>error.php</filename>
		<filename>functions.php</filename>
		<filename>templateDetails.xml</filename>
		<filename>template_preview.png</filename>
		<filename>template_thumbnail.png</filename>
		<folder>css</folder>
		<folder>fonts</folder>
		<folder>html</folder>
		<folder>images</folder>
		<folder>js</folder>
		<folder>language</folder>
	</files>
	<positions>
		<position>sidebar_social</position>
		<position>language_switcher_mobile</position>
		<position>header</position>
		<position>home_top</position>
		<position>home_more_news</position>
		<position>home_events</position>
		<position>home_bottom</position>
		<position>home_twitter_row</position>
		<position>footer_menu</position>
		<position>inner_left</position>
		<position>inner_under_content</position>
		<position>inner_after_content</position>
		<position>inner_bottom_twocol</position>
		<position>footer</position>
		<position>debug</position>
	</positions>
	
	<languages folder="language">
		<language tag="en-GB">en-GB/en-GB.tpl_panamericanhealthorganization.ini</language>
		<language tag="es-ES">es-ES/es-ES.tpl_panamericanhealthorganization.ini</language>
	</languages>
	
	<config>
		<fields name="params">
			<fieldset name="advanced">
				<field name="sitetitle"  type="text" default=""
					label="JGLOBAL_TITLE"
					description="JFIELD_ALT_PAGE_TITLE_LABEL"
					filter="string" />

				<field name="sitedescription"  type="text" default=""
					label="JGLOBAL_DESCRIPTION"
					description="JGLOBAL_SUBHEADING_DESC"
					filter="string" />
			</fieldset>
		</fields>
	</config>
</extension>
