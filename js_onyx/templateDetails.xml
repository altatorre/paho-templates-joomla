		<position>grid-bottom</position>
		<position>grid-bottom2</position>
		<position>bottom-menu</position>
		<position>onyx-footer</position>
		<position>debug</position>
	</positions>
	<params>

		<param name="style" type="list" default="green-light" label="Style" description="Select which of the style variations you wish to use">
			<option value="blue-dark">Blue-dark</option>
			<option value="blue-light">Blue-light</option>
			<option value="green-dark">Green-dark</option>
			<option value="green-light">Green-light</option>
			<option value="orange-dark">Orange-dark</option>
			<option value="orange-light">Orange-light</option>
			<option value="red-dark">Red-dark</option>
			<option value="red-light">Red-light</option>
		</param>

		<param name="modal" type="radio" default="1" label="Load modal behavior" description="Use the modal class in any link tag to open up pop ups
		 instead of new windows">
			<option value="1" checked="checked">Yes</option>
			<option value="0">No</option>
		</param>

		<param name="jquery" type="radio" default="1" label="Load jQuery *" description="Control the way that jQuery gets loaded">
			<option value="0">No</option>
			<option value="1" checked="checked">Load locally</option>
			<option value="2">Load from Google</option>
		</param>

		<param name="javascriptBottom" type="radio" default="1" label="Load Javascript at bottom" description="As a recommended practice
		 for speeding sites, Wright's calls will be placed near to the closure of the body tag">
			<option value="1" checked="checked">Yes</option>
			<option value="0">No</option>
		</param>

		<param name="logo" type="text" default="template" label="Logo Image" description="You can select your logo from the images directory after
		 you upload the image" size="20" />

		<param name="logowidth" type="text" default="4" label="Logo Image" description="Select the column width for the logo, the rest of the
		 space will be given to the newsflash module, or if you set it to full width the module will disappear" size="20" />

		<param name="body_font" type="list" default="jdefault" label="Body font" description="Select the default font face for the body">
			<option value="jdefault" selected="selected">Default - Template default</option>
			<option value="arial">Arial - sans-serif</option>
			<option value="baskerville">Baskerville - serif</option>
			<option value="cambria">Cambria - serif</option>
			<option value="centurygothic">Century Gothic - sans-serif</option>
			<option value="consolas">Consolas - monospace</option>
			<option value="copperplatelight">Copperplate Light - serif</option>
			<option value="couriernew">Courier New - monospace</option>
			<option value="franklingothic">Franklin Gothic - sans-serif</option>
			<option value="futura">Futura - sans-serif</option>
			<option value="garamond">Garamond - serif</option>
			<option value="geneva">Geneva - sans-serif</option>
			<option value="georgia">Georgia - serif</option>
			<option value="gillsans">Gill Sans - sans-serif</option>
			<option value="helvetica">Helvetica - sans-serif</option>
			<option value="impact">Impact - sans-serif</option>
			<option value="lucidasans">Lucida Sans - sans-serif</option>
			<option value="palatino">Palatino - serif</option>
			<option value="tahoma">Tahoma - sans-serif</option>
			<option value="times">Times - serif</option>
			<option value="trebuchetms">Trebuchet MS - sans-serif</option>
			<option value="verdana">Verdana - sans-serif</option>
		</param>

		<param name="header_font" type="list" default="jdefault" label="Heading Font" description="Select the default font face for the headers">
			<option value="jdefault" selected="selected">Default - Template default</option>
			<option value="arial">Arial - sans-serif</option>
			<option value="baskerville">Baskerville - serif</option>
			<option value="cambria">Cambria - serif</option>
			<option value="centurygothic">Century Gothic - sans-serif</option>
			<option value="consolas">Consolas - monospace</option>
			<option value="copperplatelight">Copperplate Light - serif</option>
			<option value="couriernew">Courier New - monospace</option>
			<option value="franklingothic">Franklin Gothic - sans-serif</option>
			<option value="futura">Futura - sans-serif</option>
			<option value="garamond">Garamond - serif</option>
			<option value="geneva">Geneva - sans-serif</option>
			<option value="georgia">Georgia - serif</option>
			<option value="gillsans">Gill Sans - sans-serif</option>
			<option value="helvetica">Helvetica - sans-serif</option>
			<option value="impact">Impact - sans-serif</option>
			<option value="lucidasans">Lucida Sans - sans-serif</option>
			<option value="palatino">Palatino - serif</option>
			<option value="tahoma">Tahoma - sans-serif</option>
			<option value="times">Times - serif</option>
			<option value="trebuchetms">Trebuchet MS - sans-serif</option>
			<option value="verdana">Verdana - sans-serif</option>
		</param>

		<param name="sidebar1" type="text" default="4" label="Columns Sidebar 1" description="Number of columns that sidebar 1 will ocupy
		 (total number of columns must be equal to 12)" size="10" />

		<param name="main" type="text" default="4" label="Columns Main Content" description="Number of columns that the main content will
		 ocupy (total number of columns must be equal to 12)" size="10" />

		<param name="sidebar2" type="text" default="4" label="Columns Sidebar 2" description="Number of columns that sidebar 2 will ocupy
		 (total number of columns must be equal to 12)" size="10" />

		<param type="spacer" default="Booststrap Options" />		

		<param name="bs_rowmode" type="radio" default="row" label="Load modal behavior" description="Use the modal class in any link tag to open up pop ups
		 instead of new windows">
			<option value="row-fluid">Fluid (%)</option>
			<option value="row">Default (px)</option>
		</param>

		<param name="responsive" type="radio" default="1" label="Responsive support" description="You can select whether you want to have responsive
		 behavior (mobile/tablet view)">
			<option value="1" checked="checked">Yes</option>
			<option value="0">No</option>
		</param>

		<param name="stickyFooter" type="radio" default="1" label="Sticky footer" description="Select whether you want to force the footer to be
		 always at the bottom of the screen">
			<option value="1" checked="checked">Yes</option>
			<option value="0">No</option>
		</param>

		<param name="wright_bootstrap_images" type="radio" default="" label="Styles for article images" description="Select if you want to enable your
		 article (intro and full text) images any of the styles available, and grow them to be responsive width/height">
			<option value="" checked="checked">None</option>
			<option value="img-rounded">Rounded</option>
			<option value="img-circle">Circle</option>
			<option value="img-polaroid">Polaroid</option>
		</param>

		<param type="spacer" default="Mobile Menu" />		

		<param name="mobile_menu_text" type="text" default="" label="Mobile menu text" description="Replace hamburger icon with a label" size="10" />

		<param name="onyx_toolbar_displayed" type="radio" default="navbar-fixed-top" label="Toolbar" description="Select whether you want to force the footer to be
		 always at the bottom of the screen">
			<option value="navbar-fixed-top" checked="checked">Fixed</option>
			<option value="navbar-static-top">Static</option>
		</param>
	</params>
</install>
